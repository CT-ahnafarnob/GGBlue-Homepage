
<style>
    .{{section.id}} {
        margin :auto;
        padding: 50px;
        background-color:#f5f5f5;
        box-sizing: border-box;
        
    }

    .{{section.id}} h2{
        font-family: var(--font-montserrat-thin);
        font-size:25px;
        letter-spacing: 1.1px;
        text-transform: uppercase;
        color: black;
    }
    .{{section.id}} p {
        font-family: var(--font-jost);
        font-size:18px;
        letter-spacing: 0.2px;
    }
    
    .{{section.id}} .fullcontainer{
        display:flex;
        justify-content:space-between;
        align-items:center;
    }

    .{{section.id}} .email {
        width:38%;
    } 

    .{{section.id}} .email p{
        font-family: var(--font-jost);
        font-size:15px;
        letter-spacing: 0.1px;
    }

    .{{section.id}} input{
        width: 350px;
        height: 5rem;
        padding: 10px;
        font-size: 20px;
    }
   .email input::placeholder {
    color: rgba(169, 166, 166, 0.9);
   }
   /* Button */
   .{{section.id}} button{
    background-color: black;
    width: 110px;
    height: 5rem;
    border: none;
   }

   @media (max-width:768px) {

   .{{section.id}}{
        padding:20px;
   }
    .{{section.id}} .fullcontainer {
    flex-direction: column;      
    align-items: flex-start;     
    }

  .{{section.id}} .email,
  .{{section.id}} .content {
    width: 100%;               
  }

  .{{section.id}} input {
    width: 100%;               
    max-width: 100%;            
  }

  .{{section.id}} button {
    width: 100%;                 
    margin-top: 10px;           
  }
   }
</style>
<section class="{{section.id}}">
    <div class="fullcontainer">
    <div class="content">
        <h2>{{section.settings.header}}</h2>
        <p>{{section.settings.content}}</p>
    </div>
    <div class="email">
        <input type="email" placeholder="Your email">
        <button><a href="#">Sign UP</a></button>
        <p>By completing this form, you are signing up to receive our emails and can unsubscribe at any time.</p>
    </div>
    </div>
</section>

{% schema %}
{
    "name": "Footer Sign UP",
    "enabled_on": {
        "groups": ["footer"]
    },
    "settings": [
             {
                "type": "text",
                "id": "header",
                "label" : "Header Text",
                "default": "Join the GGBlue Sports Club!"
             }
             ,{
                "type": "text",
                "id": "content",
                "label" : "Contetn Text",
                "default": "Get access to new releases, exclusives and sales before anyone else!"
             }
        ],
        "presets": [
            {
                "name": "Custom Footer Sign Up"
            }
        ]
}
{% endschema %}